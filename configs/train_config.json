{
  "config_name": "semi_hard_new_triplet_margin_loss_1",
  "train_dataset": {
    "dataset_name": "shopee",
    "params": {
      "dataset_path": "/data/shopee-product-matching/new_train.csv",
      "images_dir": "/data/shopee-product-matching/train_images"
    }
  },
  "test_dataset": {
    "dataset_name": "shopee",
    "params": {
      "dataset_path": "/data/shopee-product-matching/new_test.csv",
      "images_dir": "/data/shopee-product-matching/train_images"
    }
  },
  "train_loader": {
    "sampler": {
      "sampler_name": "BatchSampler",
      "params": {
        "n_classes": 10,
        "n_samples": 20
      }
    },
    "params": {
      "num_workers": 0
    }
  },
  "test_loader": {
    "sampler": {
      "sampler_name": "BatchSampler",
      "params": {
        "n_classes": 10,
        "n_samples": 20
      }
    },
    "params": {
      "num_workers": 0
    }
  },
  "optimizer": {
    "optimizer_name": "sgd",
    "params": {
      "lr": 0.05
    }
  },
  "scheduler": {
    "scheduler_name": "step_lr",
    "params": {
      "step_size": 80,
      "gamma": 0.1,
      "last_epoch": -1
    }
  },
  "loss": {
    "loss_name" : "triplet_margin_loss",
    "params": {
      "margin": 1.0,
      "p": 2,
      "swap": true
    }
  },
  "triplet_selector": {
    "selector_name": "semi_hard_triplet_selector",
    "params": {
      "cpu": true
    }
  },
  "model":{
    "model_name": "resnet50",
    "pretrained": true,
    "finetune": false,
    "embedding_size": 224
  },
  "num_epochs": 200,
  "start_epoch": 1,
  "cuda": true,
  "model_save_interval": 10,
  "log_interval": 5,
  "log_file": "/app/logs/train_model.log",
  "models_dir": "/data/models/",
  "tensorboard_dir": "/data/logging/experiments"
}