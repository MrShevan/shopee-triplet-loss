{
  "config_name": "layer4_7_pretrained_resnet50",
  "train_dataset": {
    "dataset_name": "shopee",
    "params": {
      "dataset_path": "/data/shopee-product-matching/new_train.csv",
      "images_dir": "/data/shopee-product-matching/train_images"
    }
  },
  "test_dataset": {
    "dataset_name": "shopee",
    "params": {
      "dataset_path": "/data/shopee-product-matching/new_test.csv",
      "images_dir": "/data/shopee-product-matching/train_images"
    }
  },
  "train_loader": {
    "sampler": {
      "sampler_name": "BatchSampler",
      "params": {
        "n_classes": 10,
        "n_samples": 20
      }
    },
    "params": {
      "num_workers": 0
    }
  },
  "test_loader": {
    "sampler": {
      "sampler_name": "BatchSampler",
      "params": {
        "n_classes": 10,
        "n_samples": 20
      }
    },
    "params": {
      "num_workers": 0
    }
  },
  "optimizer": {
    "optimizer_name": "adam",
    "params": {
      "lr": 0.000001
    }
  },
  "scheduler": {
    "scheduler_name": "step_lr",
    "params": {
      "step_size": 60,
      "gamma": 10,
      "last_epoch": -1
    }
  },
  "loss": {
    "loss_name" : "triplet_loss",
    "params": {
      "margin": 0.5
    }
  },
  "triplet_selector": {
    "selector_name": "balanced_negative",
    "params": {
      "loss_margin": 0.5,
      "high_bound": 1.5,
      "distance": "cosine"
    }
  },
  "model":{
    "model_name": "resnet50",
    "pretrained": true,
    "finetune": true
  },
  "load_model": true,
  "num_epochs": 120,
  "start_epoch": 0,
  "cuda": true,
  "model_save_interval": 10,
  "log_interval": 15,
  "log_file": "/app/logs/train_model.log",
  "models_dir": "/data/models/",
  "tensorboard_dir": "/data/logging/experiments"
}