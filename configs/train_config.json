{
  "config_name": "finetune_pretrained_resnet50",
  "train_dataset": {
    "dataset_name": "shopee",
    "params": {
      "dataset_path": "/data/shopee-product-matching/new_train.csv",
      "images_dir": "/data/shopee-product-matching/train_images"
    }
  },
  "test_dataset": {
    "dataset_name": "shopee",
    "params": {
      "dataset_path": "/data/shopee-product-matching/new_test.csv",
      "images_dir": "/data/shopee-product-matching/train_images"
    }
  },
  "train_loader": {
    "sampler": {
      "sampler_name": "BatchSampler",
      "params": {
        "n_classes": 30,
        "n_samples": 4
      }
    },
    "params": {
      "num_workers": 0
    }
  },
  "test_loader": {
    "sampler": {
      "sampler_name": "BatchSampler",
      "params": {
        "n_classes": 30,
        "n_samples": 4
      }
    },
    "params": {
      "num_workers": 0
    }
  },
  "optimizer": {
    "optimizer_name": "adam",
    "params": {
      "lr": 0.0001
    }
  },
  "scheduler": {
    "scheduler_name": "step_lr",
    "params": {
      "step_size": 80,
      "gamma": 0.1,
      "last_epoch": -1
    }
  },
  "loss": {
    "loss_name" : "triplet_loss",
    "params": {
      "margin": 0.2
    }
  },
  "triplet_selector": {
    "selector_name": "semihard_negative",
    "params": {
      "loss_margin": 0.2,
      "selector_margin": 1.4
    }
  },
  "model":{
    "model_name": "resnet50",
    "pretrained": true,
    "finetune": true
  },
  "num_epochs": 240,
  "start_epoch": 0,
  "cuda": true,
  "model_save_interval": 30,
  "log_interval": 15,
  "log_file": "/app/logs/train_model.log",
  "models_dir": "/data/models/",
  "tensorboard_dir": "/data/logging/experiments"
}